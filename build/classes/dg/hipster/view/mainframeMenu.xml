<menuBar>
    <menu textName="file">
        <item textName="new" action="newDocument" key="N"/>
        <item textName="-"/>
        <item textName="open" action="openDocument" key="O"/>
        <item textName="save" action="saveDocument" key="S"/>
        <item textName="exportWiki" action="exportWiki" key="E"/>
    </menu>
    <menu textName="edit">
        <item textName="undo" action="undo" key="Z"/>
        <item textName="redo" action="redo"/>
        <item textName="-"/>
        <item textName="cut" action="cutIdea" key="X"/>
        <item textName="copy" action="copyIdea" key="C"/>
        <item textName="paste" action="pasteIdea" key="V"/>
        <item textName="-"/>
        <item textName="openWikipedia" action="openWikipedia" key="K"/>
        <item textName="-"/>
        <item textName="insertChild" action="insertChild"/>
        <item textName="insertSibling" action="insertSibling"/>
    </menu>
    <menu textName="view">
        <item textName="zoomIn" action="zoomIn" key="EQUALS"/>
        <item textName="resetZoom" action="resetZoom" key="0"/>
        <item textName="zoomOut" action="zoomOut" key="MINUS"/>
        <item textName="-"/>
        <item textName="centreView" action="centreView"/>
        <item textName="resetView" action="resetView"/>
    </menu>
    <menu textName="window">
        <item textName="properties" action="togglePropertiesPanel" key="I"/>
    </menu>
    <menu textName="help">
        <item textName="homePage" action="homePage"/>
    </menu>
</menuBar>
